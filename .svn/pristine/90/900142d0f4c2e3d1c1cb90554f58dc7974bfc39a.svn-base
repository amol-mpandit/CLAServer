@model IEnumerable<CLAServer.Models.SubjectViewModel>

@{
    ViewBag.Title = "Subjects";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Subjects</h2>

<p>
    @Html.ActionLink("Home", "Index", new { Controller = "Home" }) |
    @Html.ActionLink("Create New", "Add")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SubId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClassId)
        </th>
        <th>
            Actions
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SubId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClassName.Text)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.SubId }) |
            @Html.ActionLink("Details", "Details", new { id = item.SubId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.SubId })
        </td>
    </tr>
}

</table>
