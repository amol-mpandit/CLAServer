@model  IEnumerable<Core.Classes>
@{
    ViewBag.Title = "Classes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Classes</h2>

<p>
    @Html.ActionLink("Home", "Index", new { Controller = "Home" }) |
    @Html.ActionLink("Create New", "Add")
</p>
<table class="table">
    <tr>
        <th>Id</th>
        <th>Class</th>
        <th>Division</th>
        <th>Actions</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@Html.Raw(item.ClassId)</td>
        <td>@Html.Raw(item.ClassName)</td>
        <td>@Html.Raw(item.Division)</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ClassId }) |
            @Html.ActionLink("Details", "Details", new { id = item.ClassId }) |
            @Html.ActionLink("Delete", "Delete", new {id = item.ClassId })
        </td>
    </tr>
}

</table>
